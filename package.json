{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "eslint-plugin-saleor-app",
  "version": "0.1.0",
  "description": "ESLint plugin for Saleor Apps",
  "scripts": {
    "build": "tsup-node src/* --format esm,cjs && clear-package-json package.json -o dist/package.json --fields publishConfig && pnpm copy-files",
    "copy-files": "cp README.md dist/README.md",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "release": "release-it"
  },
  "main": "dist/index.js",
  "repository": {
    "url": "https://github.com/saleor/eslint-plugin-saleor-app.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/saleor/eslint-plugin-saleor-app/issues"
  },
  "homepage": "https://github.com/saleor/eslint-plugin-saleor-app#readme",
  "type": "module",
  "engines": {
    "node": ">=16 <19",
    "pnpm": ">=8"
  },
  "author": {
    "name": "Saleor Commerce",
    "url": "https://saleor.io"
  },
  "private": false,
  "keywords": [
    "eslint",
    "plugin",
    "saleor"
  ],
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md,json}": "prettier --write"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./index.js",
      "require": "./index.cjs"
    }
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "@typescript-eslint/utils": "^5.59.9",
    "tsutils": "^3.21.0",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@typescript-eslint/types": "^5.59.9",
    "clean-publish": "^4.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "release-it": "^15.11.0",
    "tsup": "^6.7.0"
  }
}
